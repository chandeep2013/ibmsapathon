<mvc:View controllerName="com.sap.sapathon.controller.View2" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Page title="Details" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false">
                    <f:content>
                        <core:Title text="" />
                        <Label text="Usage" />
                        <ComboBox id="idUsage" placeholder="Select">
                            <items>
                                <core:Item key="PROD" text="PROD" />
                                <core:Item key="TEST" text="TEST" />
                                <core:Item key="DEV" text="DEV" />
                            </items>
			            </ComboBox>
                        <Label text="Program Name" />
                        <Input id="idProgramName" value="" placeholder="Enter program name"/>
                        <core:Title text="" />
                        <Label text="Execution Month" />
                        <ComboBox id="idExecutionMonth" placeholder="Select">
                            <items>
                                <core:Item key="Jan" text="Jan" />
                                <core:Item key="Feb" text="Feb" />
                                <core:Item key="Mar" text="Mar" />
                                <core:Item key="Apr" text="Apr" />
                                <core:Item key="May" text="May" />
                                <core:Item key="Jun" text="Jun" />
                                <core:Item key="Jul" text="Jul" />
                                <core:Item key="Aug" text="Aug" />
                                <core:Item key="Sept" text="Sept" />
                                <core:Item key="Oct" text="Oct" />
                                <core:Item key="Nov" text="Nov" />
                                <core:Item key="Dec" text="Dec" />
                            </items>
			            </ComboBox>
                        <Label  />
                        <Button text="Submit" press="onPressSubmit" width="100px"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
            <Table id="idProductsTable" inset="false" items="{Tabledata>/}" sticky="ColumnHeaders" growing="true" growingThreshold="50" growingScrollToLoad="true">
                <infoToolbar>
                    <OverflowToolbar>
                        <Label id="idMonthsDetails" text="" />
                    </OverflowToolbar>
                </infoToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Usage" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Program Name" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                        <Text text="Program Run For Month" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                        <Text text="Execution Month" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Total CPU Time in seconds" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Energy Consumption in MWh" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Co2 Emission in Milli Gram" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{Tabledata>usage}" />
                            <Text text="{Tabledata>programName}" />
                            <Text text="{Tabledata>noOfTimesThePgmRunForTheMonth}" />
                            <Text text="{Tabledata>executionMonth}" />
                            <Text text="{Tabledata>currentRunningTimeinCPUSeconds}" />
                            <Text text="{Tabledata>energyConsumptioninMWH}" />
                            <Text text="{Tabledata>co2EmissioninMG}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
